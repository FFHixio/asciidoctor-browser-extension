{
    "name":"Asciidoctor.js Live Preview",
    "version":"0.2.5",
    "manifest_version":2,

    "description":"Render AsciiDoc (.ad, .adoc, .asc, .asciidoc) as HTML inside Chrome!",

    "options_page": "options.html",

    "icons":{
        "16":"img/asciidoc_icon_16.png",
        "48":"img/asciidoc_icon_48.png",
        "128":"img/asciidoc_icon_128.png"
    },

    "content_scripts":[
        {
            "matches":[
                "http://*/*.ad",
                "http://*/*.adoc",
                "http://*/*.asc",
                "http://*/*.asciidoc",
                "https://*/*.ad",
                "https://*/*.adoc",
                "https://*/*.asc",
                "https://*/*.asciidoc",
                "file://*/*.ad",
                "file://*/*.adoc",
                "file://*/*.asc",
                "file://*/*.asciidoc"
            ],
            "js":[
                "js/highlight.min.js",
                "js/jquery.js",
                "js/opal.js",
                "js/asciidoctor.js",
                "js/asciidocify.js",
                "js/md5.js"
            ]
        }
    ],
    "web_accessible_resources":[
        "css/asciidoctor.css",
        "css/github.min.css",
        "js/highlight.min.js"
    ],
    "permissions":[
        "storage",
        "tabs",
        "<all_urls>",
        "contextMenus"
    ],
    "browser_action":{
        "default_title":"Asciidoctor.js Preview"
    },
    "background":{
        "scripts":[
            "js/background.js"
        ]
    }
}
